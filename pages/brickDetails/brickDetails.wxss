page {
  background: #F9F9F9;
}
.add-top-box {
  width: 94%;
  background: #fff;
  border-radius: 20rpx;
  margin: 21rpx auto;
}
.picker {
  color: #333333;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 57rpx;
}

.change-flex {
  display: flex;
  align-items: center;
}

.picker text {
  color: #666666;
  font-size: 28rpx;
  padding-right: 50rpx;
  padding-left: 38rpx;
}

.picker-img {
  width: 14rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  padding-right: 35rpx;
}

.picker-img image {
  width: 100%;
  height: 100%;
}

.input-box{
  border: 2rpx solid #E4E4E4;
  width: 90%;
}
.placeholder-input{
  font-size: 24rpx;
}

.flex-btn {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin-bottom: 62rpx;
  margin-top: 65rpx;
}

.save-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  width: 200rpx;
  height: 88rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F36433;
  border: 2rpx solid #EE731E;
  border-radius: 44rpx;
}
.sub-btn{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  width: 200rpx;
  height: 88rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F7F7F7;
  border-radius: 44rpx;
  background: linear-gradient(0deg, #D42136, #EE731E);
}

.del-font{
  background: #FEEFEA;
  width: 120rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #F36433;
  font-size: 24rpx;
  margin-right: 20rpx;
}
input{
  font-size: 24rpx;
}